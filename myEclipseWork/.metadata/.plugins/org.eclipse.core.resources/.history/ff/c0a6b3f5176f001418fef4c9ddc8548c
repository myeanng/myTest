	public List findAll() {
		// TODO Auto-generated method stub
		List list=null;
		session =HibernateUtil.getSession();
		tx=session.beginTransaction();
		String hql="from Category c where 1=1";
		list=session.createQuery(hql).list();
		System.out.println("hql...");
		tx.commit();
		session.close();
		return list;
